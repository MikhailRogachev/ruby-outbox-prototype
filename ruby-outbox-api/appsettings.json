{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "DatabaseConfig": {
    "Host": "localhost",
    "Port": 5432,
    "Database": "ruby-outbox",
    "Username": "postgres",
    "Password": "postgres"
  },
  "RabbitMqConfig": {
    "Hostname": "localhost",
    "Port": 5672,
    "Uri": "amqp://guest:guest@localhost:5672",
    "TransientErrorRetryAttempts": 4,
    "Queue": "ruby-outbox-queue",
    "Exchange": "ruby-outbox-exchange"
  },
  "OutboxOptions": {
    "ScanIntervalMs": 100,
    "ExceptionsAllowedBeforeBreak": 3,
    "DurationOfBreakSec": 120,
    "RepeatLimit":  3
  }
}
 